@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/PublicLayout.cshtml";
}

@section scripts {


    <script>
        $(function () {
            $("#btnLogin").click(function () {
                alert("hello");
                var login = $("#txtLogin").val();
                var pass = $("#txtPassword").val();
                var d = { "login": login, "password": pass };
                var settings = {
                    type : "POST",
                    dataType: "json",
                    url: "/User/ValidateUser",
                    data: d,
                    success: function (resp) {
                        if (resp.empty == true) {
                            $("#cpassSpan").html("all fields required");
                        }
                        else if (resp.valid == true) {
                            location.href = resp.urlToRedirect;
                        }
                        else {
                             $("#cpassSpan").html("Invalid Login/Password");
                        }
                    },
                    error: function (e) {
                        alert("error");
                    }
                };
                $.ajax(settings);
                return false;
            });
        });
    </script>

}


<h2>Login2</h2>

<div>
    Login: <input type="text" id="txtLogin" /> <br />
    Password:<input type="password" id="txtPassword" /> <br />
    <input type="submit" value="Login" id="btnLogin" /><br />
    <a href='@Url.Content("~/User/Register")'>Register</a>
    <span style="color:red" id="cpassSpan"></span>
</div>
